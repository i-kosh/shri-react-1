  "author": "Igor Koshelev",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.15",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "classnames": "^2.3.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "modern-normalize": "^1.1.0",
    "node-sass": "^6.0.0",
    "prettier": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.3.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles:fix",
    "lint:scripts": "eslint --cache src/**/*.{js,jsx,ts,tsx}",
    "lint:scripts:fix": "eslint --cache --fix src/**/*.{js,jsx,ts,tsx}",
    "lint:styles": "stylelint --cache src/**/*.{scss,css}",
    "lint:styles:fix": "stylelint --cache --fix src/**/*.{scss,css}",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,scss,json,md}": "prettier --write",
    "*.{css,scss}": "stylelint --cache --fix"
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.7",
    "eslint-config-prettier": "^8.3.0",
    "stylelint-config-prettier": "^8.0.2"
  }
}
